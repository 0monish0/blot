---
import Layout from '../layouts/Layout.astro'
---

<style>
  .container {
    font-family: var(--font-body);
    font-size: 2rem;
    max-width: 60vw;
    margin: 2rem auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    flex-flow: column wrap;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(2, 50%);
    grid-template-rows: repeat(8, 25rem);
    grid-gap: 30px;
  }

  .card {
    width: 100%;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid var(--primary);
    padding: 10px;
    text-align: center;
    font-family: var(--font);
  }

  .card img {
    box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 80%;
    border-radius: 2px;
    object-fit: cover;
  }

  .cardImg:hover,
  .cardImg:focus {
    transform: scale(101%);
  }

  .artTitle {
    font-size: 20px;
    font-weight: bold;
    color: var(--text);
  }
</style>

