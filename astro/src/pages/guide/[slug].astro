---
import Layout from '../../layouts/Layout.astro'

const slug = (file: string) => {
  file = file.replace('.md', '').slice(file.lastIndexOf('/'))
  return file.slice(1)
}

export async function getStaticPaths() {
  const workshops = await Astro.glob('../../../../guides/*.md')
  return workshops.map(workshop => {
    let file = workshop.file
      .replace('.md', '')
      .slice(workshop.file.lastIndexOf('/'))
    return {
      params: { slug: file.slice(1) }
    }
  })
}

const { slug: route } = Astro.params
const workshops = await Astro.glob('../../../../guides/*.md')
let workshop = workshops.filter(workshop => slug(workshop.file) === route)
if (!workshop.length) return Astro.redirect('/404')

workshop = workshop[0]
const Content = workshop.Content
const { title, description } = workshop.frontmatter

export const prerender = true
