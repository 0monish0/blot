<style is:global lang="scss">
  @import '../ui/variables.scss';

  body,
  html {
    background-size: 40px 40px;
    background-image: linear-gradient(to right, #ddd 1px, transparent 1px),
      linear-gradient(to bottom, #ddd 1px, transparent 1px);
    min-height: 100vh;
  }

  #container {
    margin: 0 auto;

    @media screen and (min-width: $lg) {
      width: 85vw;
    }
  }

  #gallery {
    padding: 1rem;
    position: relative;

    &::after {
      content: '';
      display: block;
      clear: both;
    }
  }

  #content {
    font-size: 1.5rem;
    font-family: var(--font-sans);
  }

  .frame {
    padding: 0;
    margin: 0.5rem;
    border: solid 15px #555;
    box-shadow: -3px -3px 12px #999;
    max-width: 30%;
    float: left;
    margin-bottom: 1rem;
    z-index: 1;
    display: flex;
    align-items: center; /* centers vertically */
    justify-content: center; /* centers horizontally */
    overflow: hidden; /* ensures nothing overflows outside the frame */
  }

  .border {
    background-color: white;
    position: relative;
    padding: 0;
    margin: 0;
    border: solid 70px white;
    border-bottom-width: 20px;
    box-shadow: -3px -3px 12px #999;

    img {
      max-width: 100%;
      max-height: 25vh;
      object-fit: contain; /* ensures the image maintains aspect ratio and scales within the container */
      // border-top: solid 2px #aaa;
      // border-left: solid 2px #aaa;
      // border-bottom: solid 2px #ccc;
      // border-right: solid 2px #ccc;
    }
  }

  .prose {
    background-color: white;
    padding-top: 1rem;
    font-size: 1.1rem;

    h2 {
      text-align: center;
      color: var(--primary);

      a {
        color: var(--primary);
        text-decoration: none;
      }
    }
  }
</style>

<Layout
  title="Guides"
  description="A gallery of various guides created by Hack Clubbers.">
  <div id="container">
    <div id="gallery">
      <div class="frame" id="content">
        <div class="border">
          <h1 style={{ margin: 0 }}>Guides</h1>
          <p style={{ marginTop: 0 }}>
            A gallery of various guides created by Hack Clubbers that anyone can
            learn from and contribute to!
          </p>
        </div>
      </div>
      {
        workshops
          .sort((a, b) =>
            a.frontmatter.pinned ? -1 : b.frontmatter.pinned ? 1 : 0
          )
          .map(workshop => {
            console.log(workshop)
            return (
              <div class="frame">
                <div class="border">
                  <img class="thumbnail" src={workshop.frontmatter.thumbnail} />
                  <div class="prose">
                    <h2 style={{ marginBottom: 0 }}>
                      <a href={`/guide/${slug(workshop.file)}`}>
                        {workshop.frontmatter.title}
                      </a>
                    </h2>
                    <div
                      set:html={marked(description(workshop.rawContent()))}
                    />
                  </div>
                </div>
              </div>
            )
          })
      }
    </div>
  </div>
</Layout>
